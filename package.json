{
  "name": "ts-backend-boilerplate",
  "version": "1.0.0",
  "description": "Typescript Backend Boilerplate",
  "keywords": [
    "Typescript",
    "Boilerplate",
    "Backend",
    "Fastify",
    "Prisma",
    "ORM",
    "MinIO",
    "Scylladb",
    "Postgresql",
    "Valkey",
    "Elasticsearch"
  ],
  "homepage": "https://github.com/ashaffah/ts-backend-boilerplate#readme",
  "bugs": {
    "url": "https://github.com/ashaffah/ts-backend-boilerplate/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ashaffah/ts-backend-boilerplate.git"
  },
  "license": "Apache-2.0",
  "author": "Ashaffah",
  "main": "./dist/src/main.js",
  "scripts": {
    "dev": "nodemon --exec tsx ./src/main.ts",
    "build:windows": "npx tsc -p tsconfig.json && powershell -File ./build-windows.ps1",
    "build:unix": "npx tsc -p tsconfig.json && rsync -av --exclude='migrations/' --exclude='*.ts' --exclude='*.prisma' --exclude='schemas/' prisma/ dist/prisma/ && rsync -av --exclude='*.ts' generated/ dist/generated/",
    "build:os": "node detect-os.ts && npm run build:windows || npm run build:unix",
    "build": "npm run build:os",
    "start": "node --import=tsx ./dist/src/main.js",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "generate": "npx prisma generate",
    "migrate:dev": "npx prisma migrate dev",
    "migrate:deploy": "npx prisma migrate deploy",
    "migrate:reset": "npx prisma migrate reset",
    "format": "npx prisma format",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/elasticsearch": "^4.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/middie": "^9.1.0",
    "@fastify/session": "^11.1.1",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@valkey/valkey-glide": "^2.2.6",
    "argon2": "^0.44.0",
    "arktype": "^2.1.29",
    "cassandra-driver": "^4.8.0",
    "dotenv": "^17.2.3",
    "eslint-config-next": "^16.1.6",
    "fastify": "^5.7.4",
    "minio": "^8.0.6",
    "paseto-ts": "^2.0.5",
    "pg": "^8.18.0",
    "pino-pretty": "^13.1.3",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@eslint/js": "^9",
    "@types/node": "^25.2.1",
    "@types/pg": "^8.16.0",
    "eslint": "^9",
    "nodemon": "^3.1.11",
    "prisma": "^7.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
